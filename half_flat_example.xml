<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE score-partwise PUBLIC "-//Recordare//DTD MusicXML 3.1 Partwise//EN" "http://www.musicxml.org/dtds/partwise.dtd">
<score-partwise version="3.1">
  <movement-title>Half-Flat Accidental Example</movement-title>
  <part-list>
    <score-part id="P1">
      <part-name>Test</part-name>
    </score-part>
  </part-list>

  <part id="P1">
    <measure number="1">
      <attributes>
        <divisions>4</divisions>
        <key>
          <fifths>0</fifths>
        </key>
        <time>
          <beats>4</beats>
          <beat-type>4</beat-type>
        </time>
        <clef>
          <sign>G</sign>
          <line>2</line>
        </clef>
      </attributes>

      <!-- BEFORE: Half-flat was exported incorrectly as full flat -->
      <!-- <note>
        <pitch>
          <step>C</step>
          <alter>-1</alter>     ❌ WRONG: Full flat instead of half-flat
          <octave>4</octave>
        </pitch>
        <duration>4</duration>
        <type>quarter</type>
      </note> -->

      <!-- AFTER: Half-flat now exports correctly -->
      <note>
        <pitch>
          <step>C</step>
          <alter>-0.5</alter>   <!-- ✅ CORRECT: Half a semitone down -->
          <octave>4</octave>
        </pitch>
        <duration>4</duration>
        <accidental>quarter-flat</accidental>  <!-- ✅ NEW: Visual symbol specified -->
        <type>quarter</type>
      </note>

      <!-- Other examples for comparison -->

      <!-- Regular flat (for comparison) -->
      <note>
        <pitch>
          <step>D</step>
          <alter>-1</alter>     <!-- Full flat: 1 semitone down -->
          <octave>4</octave>
        </pitch>
        <duration>4</duration>
        <accidental>flat</accidental>
        <type>quarter</type>
      </note>

      <!-- Sharp (for comparison) -->
      <note>
        <pitch>
          <step>E</step>
          <alter>1</alter>      <!-- Sharp: 1 semitone up -->
          <octave>4</octave>
        </pitch>
        <duration>4</duration>
        <accidental>sharp</accidental>
        <type>quarter</type>
      </note>

      <!-- Natural (for comparison) -->
      <note>
        <pitch>
          <step>F</step>
          <!-- No alter element = natural -->
          <octave>4</octave>
        </pitch>
        <duration>4</duration>
        <!-- No accidental element = natural -->
        <type>quarter</type>
      </note>

    </measure>
  </part>
</score-partwise>
